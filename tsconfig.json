{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules",
    "static",
    "dist",
    "dist/src"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}